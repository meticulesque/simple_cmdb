<%= form_with(model: configuration_item, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :ci_type %>
    <%= form.select :ci_type, ConfigurationItem::TYPES, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, ConfigurationItem::STATUSES, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :environment %>
    <%= form.select :environment, ConfigurationItem::ENVIRONMENTS, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :related_ci_ids, "Related Configuration Items" %>
    <%= form.collection_select :related_ci_ids,
       ConfigurationItem.where.not(id: configuration_item.id), :id, :name, {}, { multiple: true, class: "form-control" } %>
  </div>

  <%= form.submit class: "btn btn-success" %>
<% end %>
